<body>
   <div class="container">
  <div class="row">
    <div class="col-12 col-sm-6" id="text-column">
      <h2>These are the shapes of UFOs we have seen</h2>

      <img class="img-responsive" width="100%" src="/c196615bb9992722ea8419d9482ec0b9.jpg">
    </div>
  
 

      <div class="col-12 col-sm-6" id="list-column">
  
        <% let shapesArray = []; %>
  <% sighting.forEach(sighting => { %>
   <% if (!shapesArray.includes(sighting.shape)) { %>
   <%  shapesArray.push(sighting.shape); %>
   <% } %>
   <% }) %>
   <% for (let i = 0; i < shapesArray.length; i += 1) { %>
      <h3><a href="/shapes/<%= shapesArray[i] %>" style="color:black"><%= shapesArray[i] %></a></h3>
    <% } %>

  </div>
  </div>

